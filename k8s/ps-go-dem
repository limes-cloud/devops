apiVersion: apps/v1
kind: Deployment
metadata:
  name: {ServiceName}
  namespace: {Namespace}
  labels:
    app: {ServiceName}
spec:
  replicas: {Replicas}
  template:
    metadata:
      name: {ServiceName}
      labels:
        app: {ServiceName}
    spec:
      imagePullSecrets:
        - name: docker-hub
      containers:
        - name: {ServiceName}
          image: {ImageRegistryName}/{ServiceName}:{ImageVersion}
          imagePullPolicy: IfNotPresent
          livenessProbe:
            httpGet:
              port: {ListenPort}
              path: {ProbeValue}
            periodSeconds: 10
            timeoutSeconds: 3
            successThreshold: 1
            failureThreshold: 2
          readinessProbe:
            httpGet:
              port: {ListenPort}
              path: {ProbeValue}
            periodSeconds: 5
            timeoutSeconds: 3
            successThreshold: 1
            failureThreshold: 2
          startupProbe:
            initialDelaySeconds: {ProbeInitDelay}
            httpGet:
              port: {ListenPort}
              path: {ProbeValue}
      restartPolicy: Always
  selector:
    matchLabels:
      app: {ServiceName}

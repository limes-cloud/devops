{
  "service": "user-center",
  "system": {
    "skip_request_log": {
      "get:/auth": true
    },
    "client_timeout":{
      "enable": false,
      "timeout": "10s"
    },
    "client_limit": {
      "enable": true,
      "threshold": 100
    },
    "cpu_threshold": {
      "enable": true,
      "threshold": 900
    }
  },
  "log": {
    "level": 0,
    "trace_key": "log-id",
    "service_key": "service"
  },
  "request":{
    "enable_log": true,
    "retry_count": 3,
    "retry_wait_time":"1s",
    "timeout": "10s",
    "request_msg": "http request",
    "response_msg": "http response"
  },
  "mysql": [
    {
      "enable": true,
      "name": "devops",
      "dsn": "root:root@tcp(127.0.0.1:3306)/devops_ums?charset=utf8mb4&parseTime=True&loc=Local"
    }
  ],
  "redis": [
    {
      "enable": true,
      "name": "redis",
      "host": "127.0.0.1:6379"
    }
  ],
  "jwt": {
    "exp": 1800,
    "secret": "limeschool"
  },
  "whitelist": {
    "post:/ums/user/login": true,
    "post:/ums/token/refresh": true
  },
  "login_limit": {
    "enable":true,
    "ip_limit": 10,
    "password_limit": 3
  },
  "rsa": [
    {
      "enable": true,
      "name": "private",
      "cert_file": "config/cert/private.pem"
    },
    {
      "enable": true,
      "name": "public",
      "cert_file": "config/cert/public.pem"
    }
  ],
  "rbac": {
    "enable": true,
    "db": "devops"
  }
}
